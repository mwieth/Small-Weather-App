.is--darkblue
  transition: all 0.3s
  background: linear-gradient(to bottom, #5f2c82, #49a09d); 

.is--cloudy
  background: linear-gradient(to bottom, #7474bf, #348ac7); 

.is--sunny-light
  background: linear-gradient(to bottom, #ff8008, #ffc837); 

.is--sunny
  background: linear-gradient(to bottom, #ed4264, #ffedbc);   


